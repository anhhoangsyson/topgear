{
  "files": {
    "ignore": ["node_modules/", ".next/", "dist/"],
    "include": [
      "src/**/*",
      "app/**/*",
      "pages/**/*",
      "components/**/*",
      "utils/**/*"
    ]
  },
  "formatter": {
    "enabled": true,
    "quoteStyle": "single"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
